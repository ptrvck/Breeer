<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="40dp">

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We need to populate Breeer with places. To do that, we need you to connect to our database. Just touch the button..."
        android:lineSpacingMultiplier="1.4"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_no_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorMiscAccent"
        android:textAlignment="center"
        android:text="No internet can be found around. Try to get it, please."
        android:layout_below="@id/tv_description"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
    <Button
        android:id="@+id/button_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The button"
        android:layout_below="@id/tv_no_internet"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        style="@style/buttonStyle"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_no_internet"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>