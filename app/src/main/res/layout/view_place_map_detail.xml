<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:background="@color/colorBackgroundLight"
    android:padding="20dp">

    <TextView
        android:id="@+id/placeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cattani"
        style="@style/MainTitle"/>
    <TextView
        android:id="@+id/placeCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="food"
        style="@style/CategoryTitle"
        android:layout_below="@id/placeName"/>

    <TextView
        android:id="@+id/placeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        style="@style/BaseTextDescription"
        android:text="@string/dummyLong"
        android:layout_below="@+id/placeCategory"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/button_detail"
        android:text="detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/placeDescription"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="10dp"
        style="@style/buttonStyle"/>

    <Button
        android:id="@+id/button_closePlace"
        android:text="close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/placeDescription"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_button"
        style="@style/buttonStyle"/>

</RelativeLayout>